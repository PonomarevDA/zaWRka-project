<?xml version="1.0"?>
<launch>

  <node pkg="tf" type="static_transform_publisher" name="base_2_cam" args="0 0 0 0 0 0 base_link camera 100" />
  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video1" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="yuyv" />
    <param name="camera_frame_id" value="camera" />
    <param name="io_method" value="mmap"/>
    <param name="camera_info_url" value="package://wr8_software/calib/usb-046d_0825_CA00E440/ost.yaml" />
  </node>

  <node ns="usb_cam" name="image_proc" pkg="image_proc" type="image_proc" output="screen" >
    <!-- Input -->
    <!-- <remap from="image_raw" to="image_raw" /> -->
    <!-- Output -->
    <!-- <remap from="image_rect_color" to="image_rect_color" /> -->
  </node>

  <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="usb_cam/image_rect_color"/>
    <param name="autosize" value="true" />
  </node>

  <node name="image_view_raw" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="usb_cam/image_raw"/>
    <param name="autosize" value="true" />
  </node>

  <node name="mono_odometer" pkg="viso2_ros" type="mono_odometer" output="screen" respawn="false" >
    <remap from="image" to="usb_cam/image_rect_color" />
  </node>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find wr8_software)/rviz/mono_slam.rviz" />

</launch>